#include <stdio.h>
int main ()
{
    int i,j,k,a,b;
    char c;
    for(i=1; i<=100; i++)
    {
        printf("For %d dollars\n",i);
        for(j=1; j<=3; j++)
        {
            if(j==1)
                printf(" at 10 percent tip is %f ",i/10);
            if(j==2)
                printf(" at 15 percent tip is %f ",i*.15);
            if(j==3)
            {
                printf(" at 20 percent tip is %f\n",i/5);

            }
        }
    }
}
